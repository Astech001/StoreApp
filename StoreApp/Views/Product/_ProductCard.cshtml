@model Product



<div class="col-sm-12 col-md-4 my-3">
    <div class="card" style="width: 18rem;">
        
        <img width="80"; height="250" src="@Model?.ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title text-center fw-bold">@Model?.ProductName</h5>        
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <div class="btn btn-group">
                <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model?.ProductId">
                    <i class="fa-solid fa-arrow-right"></i>
                    Get Details
                </a>
                <form id="@Model.ProductId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="ProductId"/>
                    <input type="hidden" name="returnUrl" value="/Product/Get/@Model.ProductId" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                
                </form>

                
            </div>
            <p class="text-center mt-2">@Model?.Price.ToString("C2")</p>
        </div>   
    </div>
</div>