@model Product
<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h4 class="display-6">
                @Model.ProductName
            </h4>
            <img width="100"; height="320" class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName"/>
            <p class="lead text-danger">@Model.Price.ToString("C")</p>
        </div>
    </div>
</div>

<h3>@Model.ProductName</h3>
<h3>@Model.Price.ToString("C")</h3>

<div class="btn-group">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
        <i class="fa-solid fa-house"></i>
        Home</a>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
        <i class="fa-solid fa-list"></i>
        Products</a>

</div>


@section Header{
    <div>
        Header for only Get
    </div>
}
